{
  "name": "furycode",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "node scripts/build-for-cloudflare-pages-static.js",
    "build:static": "npm run build:pages:dynamic",
    "build:pages": "npm run build && npx @cloudflare/next-on-pages@latest || echo 'skip' && node scripts/fix-routes-overlap.js || echo 'routes-skip'",
    "build:pages:static": "cross-env STATIC_EXPORT=true next build && node scripts/build-for-cloudflare-pages-static.js",
    "build:pages:dynamic": "npm run build && npx @cloudflare/next-on-pages@latest && node scripts/fix-routes-overlap.js",
    "build:pages:export": "next build && next export",
    "build:railway": "node scripts/build-for-railway.js",
    "start": "next start",
    "lint": "next lint",
    "clean": "node scripts/clean-cache.js",
    "clean:cf": "node scripts/clean-cloudflare-cache.js",
    "clean:build": "if exist .next rmdir /s /q .next && if exist .vercel rmdir /s /q .vercel && if exist cache rmdir /s /q cache",
    "deploy:pages": "npm run build:pages",
    "deploy:pages:fixed": "node scripts/deploy-cloudflare-pages-fixed.js",
    "deploy:pages:complete": "node scripts/deploy-with-routes-fix.js",
    "deploy:pages:static": "node scripts/deploy-cloudflare-pages-static.js",
    "deploy:api": "node scripts/deploy-with-api.js",
    "test:build": "node scripts/test-build-output.js",
    "verify:cf-build": "node scripts/verify-cloudflare-build.js",
    "test:share": "node scripts/test-share-functionality.js",
    "test:r2-config": "node scripts/test-r2-config.js",
    "test:upload": "node scripts/test-upload.js",
    "test:share-r2": "node scripts/test-share-r2-integration.js",
    "test:afterimage-config": "node scripts/test-afterimage-config.js",
    "check:production": "node scripts/check-production-config.js",
    "validate:env": "node scripts/validate-env.js",
    "diagnose:404": "node scripts/diagnose-404.js",
    "fix:routes": "node scripts/fix-routes-overlap.js",
    "postbuild:sitemap": "next-sitemap"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.13.13",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "axios": "^1.10.0",
    "dotenv": "^17.2.0",
    "eslint": "^9",
    "next": "15.3.5",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-compare-image": "^3.5.6",
    "react-dom": "^19.0.0",
    "react-intersection-observer": "^9.16.0",
    "server-only": "^0.0.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5",
    "yet-another-react-lightbox": "^3.24.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/webpack": "^5.28.5",
    "cross-env": "^10.0.0",
    "eslint-config-next": "15.3.5",
    "webpack-bundle-analyzer": "^4.10.2",
    "wrangler": "^4.27.0"
  }
}
