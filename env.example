# KIE AI API密钥（用于获取图片直链）
KIE_API_KEY=your_kie_api_key_here

# Cloudflare R2 配置 - 上传图片存储桶
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key_id_here
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_access_key_here
CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name_here
CLOUDFLARE_R2_PUBLIC_URL=https://your-domain.com

# Cloudflare R2 配置 - 生成图片存储桶（专门存储AI生成的图片）
CLOUDFLARE_R2_AFTERIMAGE_BUCKET_NAME=kemono-afterimage
CLOUDFLARE_R2_AFTERIMAGE_PUBLIC_URL=https://your-afterimage-domain.com

# Cloudflare API Token（仅用于API管理，不用于S3客户端）
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# 应用配置
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development 